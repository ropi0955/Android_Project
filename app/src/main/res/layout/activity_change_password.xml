<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tienda_bg"
    tools:context=".pages.ChangePasswordActivity">

    <TextView
        android:id="@+id/oldPwView"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/blue_border"
        android:text="  Régi jelszó"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:autoSizePresetSizes="32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/newPasswordView"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/blue_border"
        android:text="  Új jelszó"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:autoSizePresetSizes="32"
        app:layout_constraintBottom_toTopOf="@+id/newPwView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/newPwView2"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginBottom="184dp"
        android:background="@drawable/blue_border"
        android:text="  Új jelszó mégegyszer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/submitPwButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="403dp"
        android:layout_height="140dp"
        android:layout_marginTop="4dp"
        android:text="Változtasd meg a jelszavad!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitPwButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:text="jóváhagyás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>